<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/query">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:orientation="vertical"


            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:layout_weight="9">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"

                android:layout_height="1px"
                android:layout_weight="3">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:textColor="#000000"
                        android:text="PocketI2Diet"
                        android:textSize="23sp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="5dp"
                        android:text="Plan your dream diet"
                        android:textSize="14sp"
                        android:textStyle="normal"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Our application gives users potential to plan diet according to the need. It takes care of your schedule and gave you reminder as well. We worked on reasonable algorithms to produce the plan efficiently."
                        android:id="@+id/textView3"
                        android:textColor="#000000"
                        android:textStyle="normal"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

