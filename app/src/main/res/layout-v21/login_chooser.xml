<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenlogin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="3"
        android:orientation="vertical"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="0.6"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

        </LinearLayout>

            <RelativeLayout
                android:id="@+id/btnSignUp"
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/buttonsignin"
                android:text="Button" >

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="10dp"
                    android:background="@drawable/signuptext"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"></LinearLayout>
            </RelativeLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"

        android:layout_weight="0.3"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="0.6"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/btnSignin"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/buttonsignin"
            android:text="Button">

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/logintext"></LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"

        android:layout_weight="1"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="0.6"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

        </LinearLayout>
        <RelativeLayout
            android:id="@+id/btnGmail"
            android:layout_width="1px"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/buttongmail"
            android:text="Button" >
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="10dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/gmailtext"></LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>